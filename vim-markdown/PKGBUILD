# Contributor Jakob Matthes <jakob.matthes@gmail.com>
pkgname=vim-markdown
pkgver=9
pkgrel=2
pkgdesc='A Vim syntax file for the Markdown formatting syntax.'
arch=('i686' 'x86_64')
url='http://plasticboy.com/markdown-vim-mode/'
license=('GPL')
depends=('vim')
source=("http://plasticboy.com/dox/mkd.vim")
md5sums=('956be77c33e19876ca0dd9a133f78f0b')

build () {
    cd $startdir/src

    install -D -m644 mkd.vim ${pkgdir}/usr/share/vim/vimfiles/syntax/mkd.vim || return 1
}
